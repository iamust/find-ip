{
  "rewrites": [
    { "source": "/", "destination": "/api" },
    { "source": "/info", "destination": "/api/info" }
  ],
  "headers": [
    {
      "source": "/(|info)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,POST" }
      ]
    }
  ]
}
